/dts-v1/;

#include "bcm6328.dtsi"

/ {
	compatible = "comtrend,ar-5381u", "brcm,bcm6328";
	model = "Comtrend AR-5381u";

	chosen {
		bootargs = "console=ttyS0,115200 earlycon";
	};

	aliases {
		led-boot = &power_green;
		led-failsafe = &alarm_red;
		led-running = &power_green;

		led-dsl = &inet_green;
	};

	memory@0 {
		device_type = "memory";
		reg = <0x00000000 0x04000000>;
	};

	gpio-keys-polled {
		compatible = "gpio-keys-polled";
		#address-cells = <1>;
		#size-cells = <0>;
		poll-interval = <20>;
		debounce-interval = <60>;

		reset {
			label = "reset";
			gpios = <&gpio0 23 GPIO_ACTIVE_LOW>;
			linux,code = <KEY_RESTART>;
		};
	};
};

&ehci {
	status = "ok";
};

&leds0 {
	status = "ok";

	alarm_red: alarm_red@2 {
		reg = <2>;
		active-low;
		label = "AR-5381u:red:alarm";
	};
	inet_green: inet_green@3 {
		reg = <3>;
		active-low;
		label = "AR-5381u:green:inet";
	};
	power_green: power_green@4 {
		reg = <4>;
		active-low;
		label = "AR-5381u:green:power";
		default-state = "on";
	};
};

&ohci {
	status = "ok";
};

&hsspi {
	status = "okay";

	m25p80@0 {
		compatible = "jedec,spi-nor";
		reg = <0>;
		spi-max-frequency = <16666667>;
		spi-tx-bus-width = <2>;
		spi-rx-bus-width = <2>;

		partitions {
			compatible = "fixed-partitions";
			#address-cells = <1>;
			#size-cells = <1>;

			cfe@0 {
				label = "CFE";
				reg = <0x000000 0x010000>;
				read-only;
			};
			firmware@10000 {
				label = "firmware";
				reg = <0x010000 0xfe0000>;
			};
			nvram@ff0000 {
				label = "nvram";
				reg = <0xff0000 0x010000>;
				read-only;
			};
		};
	};
};

&uart0 {
	status = "ok";
};

&usbh {
	status = "ok";
};
